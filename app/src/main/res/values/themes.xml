<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteFlow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color - changed to black/white for monochrome theme -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryVariant">@android:color/black</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color - changed to black/white for monochrome theme -->
        <item name="colorSecondary">@android:color/darker_gray</item>
        <item name="colorSecondaryVariant">@android:color/darker_gray</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Global background color -->
        <item name="android:colorBackground">#F0F0F0</item>
        <!-- Customize your theme here. -->
    </style>
</resources>